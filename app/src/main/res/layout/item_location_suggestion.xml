<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_background"
    android:clickable="true"
    android:padding="10dp">

   <ImageView
       android:id="@+id/imageView"
       android:layout_width="@dimen/_50sdp"
       android:layout_height="0dp"

       android:padding="5dp"
       android:src="@drawable/ic_outline_location_on_24"
       app:layout_constraintBottom_toTopOf="@+id/distance_num"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <TextView
       android:id="@+id/lsTextView"
       android:layout_width="wrap_content"
       android:layout_height="@dimen/_50sdp"
       android:maxLines="2"
       android:text="dfdasfafsdfdsafsddfsafdsa"
       android:textColor="@color/BLACK"
       android:textSize="@dimen/_16ssp"
       android:textStyle="bold"
       app:layout_constraintStart_toEndOf="@+id/imageView"
       app:layout_constraintTop_toTopOf="parent" />

   <TextView
       android:id="@+id/distance_num"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:singleLine="true"
       android:text="0 KM"
       android:textAlignment="center"
       app:layout_constraintBottom_toBottomOf="@+id/lsTextView"
       app:layout_constraintEnd_toStartOf="@+id/lsTextView"
       app:layout_constraintStart_toStartOf="@+id/imageView" />

   <View
       android:id="@+id/divider"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:layout_marginTop="5dp"
       android:background="?android:attr/listDivider"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/lsTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>