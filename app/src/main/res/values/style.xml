<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/DetailCardView</item>
    </style>

    <style name="DetailCardView">
        <item name="cornerFamily">rounded</item>
        <!-- below items does not work with normal ImageView -->
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <style name="Card">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cornerFamily">rounded</item>
        <!-- below items does not work with normal ImageView -->
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <style name="Card2">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cornerFamily">rounded</item>
        <!-- below items does not work with normal ImageView -->
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>

    <style name="CardStyle">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="AppTheme.GrayStatusBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/md_theme_surface</item>
    </style>

    <style name="Heading" parent="@android:style/Widget.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Heading_Details" parent="@android:style/Widget.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="Bold_Heading" parent="@android:style/Widget.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="Bold_SubHeading" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Bold_Large_Heading" parent="@android:style/Widget.TextView">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubHeading" parent="@android:style/Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="SeeMore" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="Bold_SubHeading2" parent="@android:style/Widget.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NormalText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
    </style>

<!--    Details view    -->
    <style name="Price" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/md_theme_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

<!--    Card View   -->
    <style name="Card_Heading" parent="@android:style/Widget.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Rec_Heading" parent="@android:style/Widget.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/md_theme_onPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Card_SubHeading" parent="@android:style/Widget.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <style name="Rec_SubHeading" parent="@android:style/Widget.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/md_theme_onPrimary</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <style name="Cart_Price" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/md_theme_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

<!--   Floating Button  -->
    <style name="floating_Button" parent="Widget.Design.FloatingActionButton">
        <item name="cornerFamily">rounded</item>
    </style>

<!--   Continue Button  -->
    <style name="button">
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="cornerRadius">10dp</item>
    </style>

<!--    Search Suggestion View-->
    <style name="Suggestion_Heading" parent="@android:style/Widget.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Suggestion_SubHeading" parent="@android:style/Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="Suggestion_Location" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/md_theme_primary</item>
<!--        <item name="android:fontFamily">sans-serif-thin</item>-->
    </style>

</resources>